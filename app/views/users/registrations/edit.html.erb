<div id="edit">

  <h2 class="title">編集ページ</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 , class: 'edit-label-title' %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" , class: 'edit-form' %>
    </div>

    <div class="field">
      <%= f.label :image , class: 'edit-label-title' %>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :プロフィール, class: 'edit-label-title' %><br />
      <%= f.text_area :introduction, autofocus: true , class: 'edit-form' %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス, class: 'edit-label-title' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: 'edit-form' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :新規パスワード, class: 'edit-label-title' %> <br />
      <%= f.password_field :password, autocomplete: "new-password" , class: 'edit-form' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> 文字以上</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :確認用パスワード, class: 'edit-label-title' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: 'edit-form' %>
    </div>

    <div class="field">
      <%= f.label :現在のパスワード , class: 'edit-label-title' %> <i>(本人確認のため)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" , class: 'edit-form' %>
    </div>

    <div class="actions">
      <%= f.submit "更新する" , class: "btn" %>
    </div>
  <% end %>

  <div class="mt-50">
    <h3>アカウントを削除する</h3>
    <p><%= button_to "削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: 'btn , btn-blue' %></p>
  </div>

  <div class="field mt-50">
    <%= link_to "戻る", :back , class: "btn" %>
  </div>
</div>
